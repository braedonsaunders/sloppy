{
  "name": "sloppy",
  "version": "1.0.0",
  "private": true,
  "description": "Transform AI-generated slop into production-ready code",
  "scripts": {
    "dev": "pnpm run kill-ports && turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "dev:server": "pnpm --filter @sloppy/server dev",
    "dev:ui": "pnpm --filter @sloppy/ui dev",
    "start": "pnpm --filter @sloppy/server start",
    "kill-ports": "node scripts/kill-ports.js",
    "update": "node scripts/update.js",
    "update:clean": "node scripts/update.js --clean"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "prettier": "^3.4.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
