{
  "name": "@sloppy/server",
  "version": "0.1.0",
  "description": "Sloppy code quality server with Fastify, WebSocket, and SQLite",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && node -e \"require('fs').cpSync('src/db/schema.sql', 'dist/db/schema.sql')\"",
    "start": "node dist/index.js",
    "test": "vitest"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.4",
    "@fastify/websocket": "^10.0.1",
    "@sloppy/analyzers": "workspace:*",
    "@sloppy/core": "workspace:*",
    "better-sqlite3": "^12.1.0",
    "fastify": "^4.28.1",
    "nanoid": "^5.0.7",
    "pino-pretty": "^13.1.3",
    "simple-git": "^3.30.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
